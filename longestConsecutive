class Solution {
    public int longestConsecutive(int[] nums) {
        if(nums.length==0) return 0;
        HashSet<Integer>set=new HashSet<>();
        for(int num:nums){
            set.add(num);

        }
        int maxlength=0;
        for(int num:nums){
            if(!set.contains(num-1)){
                int currentnum = num;
                int lengthofArray = 1;
                while(set.contains(currentnum+1)){
                    currentnum++;
                    lengthofArray++;
                }
            
                maxlength = Math.max(maxlength, lengthofArray);
            }
        }
        return maxlength;
        
    }
}
